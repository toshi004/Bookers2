<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">
          <span>Bookers</span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <% if user_signed_in? %>
        <!-- ログイン済みヘッダー　-->
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to user_path(current_user.id) do %>
                <p class="fas fa-home nav-link text-light"> Home</p>
                <% end %>
              </li>
          　　<li><%= link_to users_path do %><p class="fas fa-users nav-link text-light"> Users</p><% end %></li>
          　　<li><%= link_to books_path do %><p class="fas fa-book-open nav-link text-light"> Books</p><% end %></li>
          　　<li><%= link_to destroy_user_session_path, method: :delete do %><p class="fas fa-sign-out-alt nav-link text-light"> logout</p><% end %></li>
        　　</ul>
          </div>
        <% else %>
        <!-- ログアウト時ヘッダー -->
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li><%= link_to root_path do %><p class="fas fa-home nav-link text-light"> Home</p><% end %></li>
              <li><%= link_to home_about_path do %><p class="fas fa-link nav-link text-light"> About</p><% end %></li>
              <li><%= link_to new_user_registration_path do %><p class="fas fa-user-plus nav-link text-light"> sign up</p><% end %></li>
              <li><%= link_to new_user_session_path do %><p class="fas fa-sign-in-alt nav-link text-light"> login</p><% end %></li>
            </ul>
          </div>
        <% end %>
      </div>
    </nav>
  </header>

  <main>
    <% flash.each do |key, value| %>
      <%= content_tag(:p, value, class:"text-success") %>
    <% end %>

    <%= yield %>
  </main>

  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>

  </body>
</html>
