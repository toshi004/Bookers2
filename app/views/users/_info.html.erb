<div class="col-md-3">
  <h2>User info</h2>

  <%= attachment_image_tag user, :user_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <table class="table">
    <tbody>
      <tr><th>name</th><th><%= user.name %></th></tr>
      <tr><th>introduction</th><th><%= user.introduction %></th></tr>
    </tbody>
  </table>

  <div class="row">
    <% if user == current_user.id %>
    <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/#{user.id}/edit"></a>
    <% else %>
    <a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/#{user.id}"></a>
    <% end %>
  </div>

  <h2 class="mt-3">New book</h2>
  <%= form_with model: Book.new, local:true do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>%
  <div class="form-group">
    <%= f.label :body, "Opinion" %>
    <%= f.text_area :body %>
  </div>
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
  <%= link_to 'Show'

</div>